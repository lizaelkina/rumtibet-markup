mixin logo
  a(href='/')
    img.logo&attributes(attributes)(src='./img/logo/logo.svg' alt='Логотип')

mixin svg(name)
  svg(data-svg=name)&attributes(attributes)
    use(xlink:href=`./img/sprites/sprite.svg#${name}`)

mixin img(src, alt)
  img(src=src alt=alt)&attributes(attributes)

mixin section-title(subtitle, title)
  div.section-title&attributes(attributes)
    h3.section-title__subtitle= subtitle
    h2.section-title__title= title

mixin rating-tour(rating)
  div.rating&attributes(attributes)
    +svg('star').rating__svg
    p.rating__number= rating

mixin overlay-tour(title, subtitle, price, text)
  div.overlay&attributes(attributes)
    div.overlay__info
      h4.overlay__title= title
      h5.overlay__subtitle= subtitle
      p.overlay__price= price
    p.overlay__text= text
