mixin menu(title, href)
  li
    a.header__link.link-hover(href=href)= title

header.header
  +logo.header__logo
  nav.header__nav
    ul.header__menu
      +menu('Главная', '#')
      +menu('Про гида', '#')
      +menu('Программа тура', '#')
      +menu('Стоимость', '#')
      +menu('Блог', '#')
      +menu('Контакты', '#')
    a.btn.btn_primary.header__button(href='#') Консультация